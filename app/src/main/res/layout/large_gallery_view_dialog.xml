<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#9F000000">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cross"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_25sdp"
        android:id="@+id/btn_cancel"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/_300sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/gallery_img"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/img_gallery_view"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="@dimen/_80sdp"
        app:layout_constraintStart_toEndOf="@id/img_previous"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:layout_constraintEnd_toStartOf="@id/img_next"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rv_gallery_img"/>

    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_right_arrow"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/rv_gallery_img"
        app:layout_constraintBottom_toBottomOf="@id/rv_gallery_img"
        android:layout_marginRight="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/img_next"/>

    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_right_arrow"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/rv_gallery_img"
        app:layout_constraintBottom_toBottomOf="@id/rv_gallery_img"
        android:layout_marginLeft="@dimen/_15sdp"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/img_previous"/>


</androidx.constraintlayout.widget.ConstraintLayout>