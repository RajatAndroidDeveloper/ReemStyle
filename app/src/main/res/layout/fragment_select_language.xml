<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".auth.LoginFragment">

    <ImageView
        android:layout_width="@dimen/_500sdp"
        android:layout_height="1000dp"
        android:layout_marginRight="@dimen/_300sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:background="@drawable/ic_login_girl_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:src="@drawable/splash_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oranienbaum_regular"
            android:gravity="center"
            android:text="@string/choose_language"
            android:textColor="@color/white"
            android:textSize="@dimen/_35sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_tick_pink"
            android:background="@drawable/ic_black_btn_bg"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_welcome"
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/btn_english"
            android:text="@string/english"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/btn_arabic"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_light_pink_tick"
            android:background="@drawable/ic_black_btn_bg"
            android:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="@dimen/_5sdp"
            app:layout_constraintStart_toEndOf="@id/btn_english"
            app:layout_constraintTop_toBottomOf="@id/txt_welcome"
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/btn_arabic"
            android:text="@string/arabic"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_profile_button_bg"
            android:backgroundTint="@color/black"
            app:layout_constraintEnd_toEndOf="@id/btn_arabic"
            app:layout_constraintStart_toStartOf="@id/btn_english"
            app:layout_constraintTop_toBottomOf="@id/btn_arabic"
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/btn_continue"
            android:text="@string/continue_text"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/white"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>