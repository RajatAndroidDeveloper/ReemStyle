<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_rounded_corner_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plumbing"
        app:layout_constraintEnd_toStartOf="@id/ic_bookings"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/ic_home"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/ic_home"
        app:layout_constraintStart_toStartOf="@id/ic_home"
        app:layout_constraintEnd_toEndOf="@id/ic_home"
        android:layout_marginTop="@dimen/_5sdp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calendar"
        android:layout_marginLeft="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@id/ic_booknow"
        app:layout_constraintStart_toEndOf="@id/ic_home"
        app:layout_constraintTop_toTopOf="@id/ic_home"
        app:layout_constraintBottom_toBottomOf="@id/ic_home"
        android:id="@+id/ic_bookings"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/booking"
        android:textSize="@dimen/_12ssp"
        android:id="@+id/txt_booking"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/ic_bookings"
        app:layout_constraintStart_toStartOf="@id/ic_bookings"
        app:layout_constraintEnd_toEndOf="@id/ic_bookings"
        android:layout_marginTop="@dimen/_5sdp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_booknow"
        app:layout_constraintStart_toEndOf="@id/ic_bookings"
        app:layout_constraintEnd_toStartOf="@id/ic_profile"
        android:layout_marginLeft="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="@id/ic_bookings"
        app:layout_constraintBottom_toBottomOf="@id/ic_bookings"
        android:id="@+id/ic_booknow"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_now"
        android:textSize="@dimen/_12ssp"
        android:id="@+id/txt_booknow"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/ic_booknow"
        app:layout_constraintStart_toStartOf="@id/ic_booknow"
        app:layout_constraintEnd_toEndOf="@id/ic_booknow"
        android:layout_marginTop="@dimen/_5sdp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile"
        android:layout_marginLeft="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/ic_booknow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_booknow"
        app:layout_constraintBottom_toBottomOf="@id/ic_booknow"
        android:id="@+id/ic_profile"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textSize="@dimen/_12ssp"
        android:id="@+id/txt_profile"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/ic_profile"
        app:layout_constraintStart_toStartOf="@id/ic_profile"
        app:layout_constraintEnd_toEndOf="@id/ic_profile"
        android:layout_marginTop="@dimen/_5sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>