<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@id/ll_quantity"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll_quantity"
        app:layout_constraintBottom_toTopOf="@id/txt_price"
        android:text="Small"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        android:textStyle="bold"
        android:id="@+id/txt_service_size"
        android:textSize="@dimen/_12ssp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:textColor="@color/black"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@id/ll_quantity"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_service_size"
        app:layout_constraintBottom_toBottomOf="@id/ll_quantity"
        android:text="QAR 20.00"
        android:fontFamily="@font/montserrat_bold"
        android:textStyle="bold"
        android:id="@+id/txt_price"
        android:textSize="@dimen/_9ssp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_height="wrap_content"/>


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/home_bg_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_quantity"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_quant_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/ic_add"
            android:id="@+id/img_add"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/ic_minus"
            android:id="@+id/img_minus"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:gravity="end"
            android:layout_gravity="end|center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/txt_quantity"
            android:fontFamily="@font/montserrat_bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>