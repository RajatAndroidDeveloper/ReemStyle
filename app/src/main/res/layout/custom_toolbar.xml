<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_rounded_corner_bg">

    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:src="@drawable/ic_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_logo"
        app:layout_constraintBottom_toBottomOf="@id/img_logo"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_location"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_6sdp"
        android:drawableLeft="@drawable/ic_toolbar_marker"
        android:drawablePadding="@dimen/_5sdp"
        android:maxLines="1"
        android:drawableRight="@drawable/ic_down_arrow"
        android:text="....."
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@id/img_logo"
        app:layout_constraintStart_toEndOf="@id/img_menu"
        app:layout_constraintTop_toTopOf="@id/img_logo" />

    <ImageView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_45sdp"
        android:src="@drawable/splash_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/img_logo"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintEnd_toStartOf="@id/img_cart"
        android:layout_marginEnd="@dimen/_8sdp"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_width="@dimen/_2sdp"
        android:id="@+id/img_profile"
        android:src="@drawable/ic_dummy_profile"
        app:layout_constraintTop_toTopOf="@id/img_logo"
        app:layout_constraintBottom_toBottomOf="@id/img_logo"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="@id/img_profile"
        app:layout_constraintBottom_toBottomOf="@id/img_profile"
        android:src="@drawable/cart_icon"
        app:tint="@color/white"
        android:layout_marginRight="@dimen/_10sdp"
        android:id="@+id/img_cart"/>

    <EditText
        android:layout_width="0dp"
        android:id="@+id/et_search"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="@string/search_for_services"
        android:drawablePadding="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/img_logo"
        android:background="@drawable/ic_et_search_bg"
        android:layout_marginLeft="@dimen/_20sdp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textSize="@dimen/_12ssp"
        android:layout_marginRight="@dimen/_20sdp"
        android:drawableLeft="@drawable/ic_search"/>

</androidx.constraintlayout.widget.ConstraintLayout>